<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <!-- Material 3 App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topToolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/colorSurface"
        android:elevation="@dimen/elevation_level1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 프로필 섹션 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_sm">

            <!-- 프로필 이미지 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/spacing_xxl"
                android:layout_height="@dimen/spacing_xxl"
                app:cardCornerRadius="@dimen/corner_radius_full"
                app:cardElevation="@dimen/elevation_level1"
                android:layout_marginEnd="@dimen/spacing_sm">
                
                <ImageView
                    android:id="@+id/toolbarCareTargetImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimaryContainer"
                    android:src="@drawable/ic_myinfo_selected"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/stringToolbarCareTargetImage" />
                    
            </com.google.android.material.card.MaterialCardView>

            <!-- 사용자 이름 -->
            <TextView
                android:id="@+id/toolbarCareTargetNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.TitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="120dp" />

        </LinearLayout>

        <!-- 중앙 타이틀 -->
        <TextView
            android:id="@+id/toolbarFragmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/stringHome"
            android:textAppearance="@style/TextAppearance.App.TitleLarge"
            android:textColor="?attr/colorOnSurface" />

        <!-- 알림 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/toolbarAlarmImageButton"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/spacing_sm"
            app:icon="@drawable/warning"
            app:iconSize="@dimen/icon_size_md"
            app:iconTint="?attr/colorOnSurface"
            android:contentDescription="@string/stringToolbarAlarmImageButton" />

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- 메인 컨텐츠 영역 -->
    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_color"
        app:layout_constraintTop_toBottomOf="@+id/topToolBar"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Material 3 FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_md"
        android:layout_marginBottom="@dimen/spacing_md"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_plus"
        app:tint="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorPrimary"
        app:elevation="@dimen/elevation_level3"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:contentDescription="@string/medicinePlusButton" />

    <!-- Material 3 Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        style="@style/Widget.App.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_navigation_height"
        android:background="?attr/colorSurface"
        android:elevation="@dimen/elevation_level2"
        app:itemIconSize="@dimen/icon_size_md"
        app:itemIconTint="?attr/colorOnSurfaceVariant"
        app:itemTextColor="?attr/colorOnSurfaceVariant"
        app:itemActiveIndicatorStyle="@style/Widget.Material3.BottomNavigationView.ActiveIndicator"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu_bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>