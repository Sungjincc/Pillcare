<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".sign_up.SignUpActivityOne">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- 계정 생성  -->
            <TextView
                android:id="@+id/signUpTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintHorizontal_bias="0.1"
                android:text="@string/signUpTitleText"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <!-- 이름 입력  -->
            <TextView
                android:id="@+id/signUpNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/signUpNameLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUpTitleText"
                app:layout_constraintVertical_bias="0.3"
                android:text="@string/stringName"
                android:textSize="14sp"
                android:textColor="#085408"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signUpNameLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                app:layout_constraintBottom_toBottomOf="@+id/signUpIdText"
                app:layout_constraintTop_toBottomOf="@id/signUpNameText"
                app:layout_constraintVertical_bias="0.1"
                android:layout_marginHorizontal="30dp"
                android:paddingHorizontal="10dp"
                android:paddingBottom="5dp"
                android:elevation="10dp">
                <EditText
                    android:id="@+id/signUpNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:hint="@string/enterName"
                    android:textSize="13sp"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 아이디 입력  -->
            <TextView
                android:id="@+id/signUpIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/signUpIdLinearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUpNameLayout"
                app:layout_constraintVertical_bias="0.01"
                android:layout_marginTop="15dp"
                android:text="@string/stringId"
                android:textSize="14sp"
                android:textColor="#085408"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"/>
            <LinearLayout
                android:id="@+id/signUpIdLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/signUpPhoneNumberText"
                app:layout_constraintTop_toBottomOf="@id/signUpIdText"
                app:layout_constraintVertical_bias="0.01">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signUpIdLayout"
                    app:errorEnabled="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginStart="30dp"
                    android:paddingHorizontal="10dp"
                    app:counterMaxLength="20"
                    app:counterEnabled="true">
                    <EditText
                        android:id="@+id/signUpIdEditText"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/enterId"
                        android:textSize="13sp"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonCheckDuplicate"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/main_color_inputbox"
                    android:layout_marginEnd="35dp"
                    android:text="@string/duplicateCheck"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 전화번호 입력  -->
            <TextView
                android:id="@+id/signUpPhoneNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUpIdLinearLayout"
                app:layout_constraintVertical_bias="0.01"
                android:text="@string/stringPhoneNumber"
                android:textSize="14sp"
                android:textColor="#085408"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"/>
            <LinearLayout
                android:id="@+id/signUpPhoneNumberLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/signUpPhoneNumberText"
                app:layout_constraintBottom_toTopOf="@id/signUpVerificationCodeText"
                app:layout_constraintVertical_bias="0.1">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signUpPhoneNumberLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:paddingHorizontal="10dp"

                    android:elevation="10dp">
                    <EditText
                        android:id="@+id/signUpPhoneNumberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:maxLength="11"
                        android:hint="@string/enterPhoneNumber"
                        android:paddingEnd="10dp"
                        android:textSize="12sp"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/main_color_inputbox"
                    android:layout_marginEnd="35dp"
                    android:text="@string/getVerificationCode"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </LinearLayout>

            <!-- 인증번호 입력  -->
            <TextView
                android:id="@+id/signUpVerificationCodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/signUpVerificationCodeLinearLayout"
                app:layout_constraintTop_toBottomOf="@id/signUpPhoneNumberLinearLayout"
                app:layout_constraintVertical_bias="0.01"
                android:layout_marginTop="15dp"
                android:text="@string/stringVerificationCode"
                android:textSize="14sp"
                android:textColor="#085408"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"/>
            <LinearLayout
                android:id="@+id/signUpVerificationCodeLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/signUpPasswordText"
                app:layout_constraintTop_toBottomOf="@id/signUpVerificationCodeText"
                app:layout_constraintVertical_bias="0.1">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signUpVerificationCodeLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:paddingHorizontal="10dp">
                    <EditText
                        android:id="@+id/signUpVerificationCodeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="@string/EnterSixOfNumber"
                        android:textSize="12sp"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/main_color_inputbox"
                    android:layout_marginEnd="35dp"
                    android:text="@string/verificationCodeCheck"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 비밀번호 입력  -->
            <TextView
                android:id="@+id/signUpPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUpVerificationCodeLinearLayout"
                app:layout_constraintVertical_bias="0.01"
                android:layout_marginTop="15dp"
                android:text="@string/stringPasswrod"
                android:textSize="14sp"
                android:textColor="#085408"
                android:textStyle="bold"
                android:layout_marginLeft="40dp" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signUpPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUpPasswordText"
                app:layout_constraintVertical_bias="0.1"
                android:layout_marginHorizontal="30dp"
                android:paddingHorizontal="10dp"
                android:paddingBottom="5dp"
                android:elevation="10dp"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/gray">
                <EditText
                    android:id="@+id/signUpPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="textPassword"
                    android:hint="@string/enterPassword"
                    android:textSize="13sp"
                    android:imeOptions="actionNext"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 비밀번호 확인  -->
            <TextView
                android:id="@+id/signUpConfirmPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUpPasswordLayout"
                app:layout_constraintVertical_bias="0.01"
                android:layout_marginTop="15dp"
                android:text="@string/confirmPassword"
                android:textSize="14sp"
                android:textColor="#085408"
                android:textStyle="bold"
                android:layout_marginLeft="40dp" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signUpConfirmPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUpConfirmPasswordText"
                app:layout_constraintVertical_bias="0.1"
                android:layout_marginHorizontal="30dp"
                android:paddingHorizontal="10dp"
                android:paddingBottom="5dp"
                android:elevation="10dp"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/gray">
                <EditText
                    android:id="@+id/signUpConfirmPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="textPassword"
                    android:hint="@string/reEnterPassword"
                    android:textSize="13sp"
                    android:imeOptions="actionDone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 가입 취소, 다음 버튼  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/signUpCancelAndNextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/signUpConfirmPasswordLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="56dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signUpCancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/main_color_inputbox"
                    android:padding="5dp"
                    android:elevation="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/signUpNextButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:text="@string/signUpCancel"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signUpNextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/main_color_inputbox"
                    android:padding="1dp"
                    android:elevation="8dp"
                    app:layout_constraintStart_toEndOf="@id/signUpCancelButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:layout_marginStart="60dp"
                    android:text="@string/goToNextPage"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

