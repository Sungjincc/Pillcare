<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">

                <!--초록색 화면 레이아웃-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/myInfoMainColorLayout"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/mainColor"/>

                <!--내 정보 아이콘 버튼-->
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintEnd_toEndOf="@id/myInfoCompatButton"
                    app:layout_constraintBottom_toBottomOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toTopOf="@id/myInfoMainColorLayout"
                    app:layout_constraintVertical_bias="0.45"
                    app:icon="@drawable/ic_myinfo_unselected"
                    app:iconSize="50dp"/>

                <!--내정보 텍스트 나오는 버튼-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/myInfoCompatButton"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toStartOf="@id/myInfoMainColorLayout"
                    app:layout_constraintEnd_toEndOf="@id/myInfoMainColorLayout"
                    app:layout_constraintTop_toTopOf="@id/myInfoMainColorLayout"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.12"
                    android:paddingTop="15dp"
                    android:text="김단국 님"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="40dp"
                    android:background="@color/white"/>

                <!--이름 텍스트 뷰-->
                <TextView
                    android:id="@+id/myInfoNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoCompatButton"
                    android:layout_marginTop="20dp"
                    android:text="@string/stringName"
                    android:textSize="17sp"
                    android:textColor="#085408"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/myInfoNamePrintText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gray_inputbox"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintEnd_toEndOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoNameText"
                    android:text="김단국"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="50dp"
                    android:paddingStart="20dp"/>

                <!--아이디 텍스트 뷰-->
                <TextView
                    android:id="@+id/myInfoIdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoNamePrintText"
                    android:layout_marginTop="10dp"
                    android:text="@string/stringId"
                    android:textSize="17sp"
                    android:textColor="#085408"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/myInfoIdPrintText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gray_inputbox"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintEnd_toEndOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoIdText"
                    android:text="dankook1.2"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="50dp"
                    android:paddingStart="20dp"/>

                <!--전화번호 텍스트 뷰-->
                <TextView
                    android:id="@+id/myInfoPhoneNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoIdPrintText"
                    android:layout_marginTop="10dp"
                    android:text="@string/stringPhoneNumber"
                    android:textSize="17sp"
                    android:textColor="#085408"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/myInfoPhoneNumberPrintText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gray_inputbox"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintEnd_toEndOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoPhoneNumberText"
                    android:text="010-1234-2123"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="50dp"
                    android:paddingStart="20dp"/>

                <!--케어 대상자 이름 텍스트 뷰-->
                <TextView
                    android:id="@+id/myInfoCareTargetNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoPhoneNumberPrintText"
                    android:layout_marginTop="10dp"
                    android:text="@string/stringCareTargetName"
                    android:textSize="17sp"
                    android:textColor="#085408"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/myInfoCareTargetNamePrintText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gray_inputbox"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintEnd_toEndOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoCareTargetNameText"
                    android:text="홍길동"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="50dp"
                    android:paddingStart="20dp"/>

                <!--케어 대상자 전화번호 텍스트 뷰-->
                <TextView
                    android:id="@+id/myInfoCareTargetPhoneNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoCareTargetNamePrintText"
                    android:layout_marginTop="10dp"
                    android:text="@string/stringCareTargetPhoneNumber"
                    android:textSize="17sp"
                    android:textColor="#085408"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/myInfoCareTargetPhoneNumberPrintText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gray_inputbox"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintEnd_toEndOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoCareTargetPhoneNumberText"
                    android:text="010-9999-9999"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="50dp"
                    android:paddingStart="20dp"/>

                <!--보호자 메모 텍스트 뷰-->
                <TextView
                    android:id="@+id/myInfoGuardianMemoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoCareTargetPhoneNumberPrintText"
                    android:layout_marginTop="10dp"
                    android:text="@string/stringGuardianMemo"
                    android:textSize="17sp"
                    android:textColor="#085408"
                    android:textStyle="bold"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/myInfoGuardianMemoRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="50dp"
                    android:paddingStart="20dp"
                    app:layout_constraintStart_toStartOf="@id/myInfoCompatButton"
                    app:layout_constraintEnd_toEndOf="@id/myInfoCompatButton"
                    app:layout_constraintTop_toBottomOf="@id/myInfoGuardianMemoText"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>



