<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_xl">

        <!-- 프로필 헤더 섹션 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="@dimen/elevation_level2"
            app:cardBackgroundColor="@android:color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_lg">

                <!-- 프로필 이미지 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profileImageContainer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="@dimen/corner_radius_full"
                    app:cardElevation="@dimen/elevation_level3"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_myinfo_unselected"
                        app:tint="?attr/colorPrimary"
                        android:contentDescription="프로필 이미지" />

                </com.google.android.material.card.MaterialCardView>

                <!-- 사용자 정보 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/profileImageContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/profileImageContainer"
                    app:layout_constraintBottom_toBottomOf="@id/profileImageContainer">

                    <!-- 사용자 이름 -->
                    <TextView
                        android:id="@+id/myInfoCompatButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.App.HeadlineMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        tools:text="김단국 님" />



                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 개인 정보 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_sm"
            android:orientation="vertical">

            <!-- 섹션 헤더 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="개인 정보"
                android:textAppearance="@style/TextAppearance.App.TitleLarge"
                android:textColor="?attr/colorOnBackground" />

            <!-- 이름 정보 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/myInfoNamePrintText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="김단국" />
                    <EditText
                        android:id="@+id/myInfoNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 아이디 정보 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이디"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/myInfoIdPrintText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="dangguk123" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 휴대폰 번호 정보 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="휴대폰 번호"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/myInfoPhoneNumberPrintText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="010-1234-5678" />
                    <EditText
                        android:id="@+id/myInfoPhoneNumberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 케어 대상자 이름 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="케어 대상자 이름"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/myInfoCareTargetNamePrintText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="김할머니" />
                    <EditText
                        android:id="@+id/myInfoCareTargetNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 케어 대상자 휴대폰 번호 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="케어 대상자 휴대폰 번호"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/myInfoCareTargetPhoneNumberPrintText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="010-9876-5432" />
                    <EditText
                        android:id="@+id/myInfoCareTargetPhoneNumberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>

        <!-- 보호자 메모 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:orientation="vertical">

            <!-- 메모 섹션 헤더 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="보호자 메모"
                    android:textAppearance="@style/TextAppearance.App.TitleLarge"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- 메모 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/myInfoGuardianMemoRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/guardian_memo_list" />

            <!-- 빈 메모 상태 -->
            <LinearLayout
                android:id="@+id/emptyMemoState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/spacing_xl"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_note"
                    android:alpha="0.6"
                    android:contentDescription="메모 없음" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="작성된 메모가 없습니다"
                    android:textAppearance="@style/TextAppearance.App.BodyLarge"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>