<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/unEditAbleColor">


    <!--계정 텍스트-->
    <TextView
        android:id="@+id/settingAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/stringAccount"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"/>

    <!--내 정보 변경 카드뷰-->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingChangeMyInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/settingAccountText">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/settingChangeMyInfoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_myinfo_unselected"
                android:contentDescription="@string/stringSettingChangeMyInfo"/>
            <TextView
                android:id="@+id/settingChangeMyInfoText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:text="@string/stringSettingChangeMyInfo"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/settingChangeMyInfoNextImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_next"
                android:scaleX="1.0"
                android:contentDescription="@string/goToNextPage"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <!--케어 대상자 정보 변경 카드뷰-->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingChangeCareTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/settingChangeMyInfo">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/settingChangeCareTargetImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_myinfo_unselected"
                android:backgroundTint="@color/mainColor"
                android:contentDescription="@string/stringSettingChangeCareTarget"/>
            <TextView
                android:id="@+id/settingChangeCareTargetText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:text="@string/stringSettingChangeCareTarget"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/settingChangeCareTargetNextImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_next"
                android:scaleX="1.0"
                android:contentDescription="@string/goToNextPage"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <!--비밀번호 변경 카드뷰-->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/settingChangeCareTarget">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/settingChangePasswordImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_change_password"
                android:backgroundTint="#88146DDB"
                android:contentDescription="@string/stringSettingChangePassword"/>
            <TextView
                android:id="@+id/settingChangePasswordText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:text="@string/stringSettingChangePassword"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/settingChangePasswordNextImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_next"
                android:scaleX="1.0"
                android:contentDescription="@string/goToNextPage"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <!--푸쉬 알림 설정 카드뷰-->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingSetPushAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/settingChangePassword">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/settingSetPushAlarmImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_push_alarm"
                android:backgroundTint="#AF950A"
                android:contentDescription="@string/stringSetPushAlarm"/>
            <TextView
                android:id="@+id/settingSetPushAlarmText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:text="@string/stringSetPushAlarm"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/settingSetPushAlarmNextImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_next"
                android:scaleX="1.0"
                android:contentDescription="@string/goToNextPage"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <!--정보 및 라이선스  텍스트-->
    <TextView
        android:id="@+id/settingInfoAndLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settingSetPushAlarm"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/stringInfoAndLicense"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>

    <!--앱 버전 정보 카드뷰-->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingVersionOfApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/settingInfoAndLicense">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/ssettingVersionOfAppImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_version_app"
                android:backgroundTint="@color/black"
                android:contentDescription="@string/stringVersionOfApp"/>
            <TextView
                android:id="@+id/settingVersionOfAppText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:text="@string/stringVersionOfApp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/settingVersionOfAppNextImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_next"
                android:scaleX="1.0"
                android:contentDescription="@string/goToNextPage"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <!--오픈소스 라이선스 카드뷰-->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingLicense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/settingVersionOfApp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/settingLicenseImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_license"
                android:backgroundTint="#91EFB65F"
                android:contentDescription="@string/stringLicense"/>
            <TextView
                android:id="@+id/settingLicenseText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:text="@string/stringLicense"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/settingLicenseNextImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_next"
                android:scaleX="1.0"
                android:contentDescription="@string/goToNextPage"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/settingLogoutEfab"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingLicense"
        android:layout_marginTop="50dp"
        android:elevation="8dp"
        android:backgroundTint="@color/mainColor"
        android:text="@string/stringLogout"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>