<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- 계정 관리 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:orientation="vertical">

            <!-- 섹션 헤더 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="계정 관리"
                android:textAppearance="@style/TextAppearance.App.TitleLarge"
                android:textColor="?attr/colorOnBackground" />

            <!-- 내 정보 변경 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/settingChangeMyInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_size_md"
                        android:layout_height="@dimen/icon_size_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:src="@drawable/ic_myinfo_unselected"
                        app:tint="?attr/colorPrimary"
                        android:contentDescription="내 정보 변경" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="내 정보 변경"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorOnSurface" />

                    <ImageView
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:src="@drawable/ic_next"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="이동" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 케어 대상자 정보 변경 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/settingChangeCareTarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_size_md"
                        android:layout_height="@dimen/icon_size_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:src="@drawable/ic_care_target"
                        app:tint="?attr/colorPrimary"
                        android:contentDescription="케어 대상자 정보 변경" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="케어 대상자 정보 변경"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorOnSurface" />

                    <ImageView
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:src="@drawable/ic_next"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="이동" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 비밀번호 변경 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/settingChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_size_md"
                        android:layout_height="@dimen/icon_size_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:src="@drawable/ic_lock"
                        app:tint="?attr/colorPrimary"
                        android:contentDescription="비밀번호 변경" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="비밀번호 변경"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorOnSurface" />

                    <ImageView
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:src="@drawable/ic_next"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="이동" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- 알림 설정 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:orientation="vertical">

            <!-- 섹션 헤더 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="알림 설정"
                android:textAppearance="@style/TextAppearance.App.TitleLarge"
                android:textColor="?attr/colorOnBackground" />

            <!-- 푸시 알림 설정 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/settingSetPushAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_size_md"
                        android:layout_height="@dimen/icon_size_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:src="@drawable/ic_alarm"
                        app:tint="?attr/colorPrimary"
                        android:contentDescription="푸시 알림 설정" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="푸시 알림 설정"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorOnSurface" />

                    <ImageView
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:src="@drawable/ic_next"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="이동" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- 앱 정보 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 섹션 헤더 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="앱 정보"
                android:textAppearance="@style/TextAppearance.App.TitleLarge"
                android:textColor="?attr/colorOnBackground" />

            <!-- 앱 버전 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/settingVersionOfApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_size_md"
                        android:layout_height="@dimen/icon_size_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:src="@drawable/ic_info"
                        app:tint="?attr/colorPrimary"
                        android:contentDescription="앱 버전" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="앱 버전"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:text="v1.0.0"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <ImageView
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:src="@drawable/ic_next"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="이동" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 라이센스 정보 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/settingLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_size_md"
                        android:layout_height="@dimen/icon_size_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:src="@drawable/ic_license"
                        app:tint="?attr/colorPrimary"
                        android:contentDescription="라이센스 정보" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="라이센스 정보"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorOnSurface" />

                    <ImageView
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:src="@drawable/ic_next"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="이동" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- 계정 관련 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 섹션 헤더 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="계정"
                android:textAppearance="@style/TextAppearance.App.TitleLarge"
                android:textColor="?attr/colorOnBackground" />

            <!-- 로그아웃 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/settingLogoutEfab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="@dimen/elevation_level1"
                app:cardBackgroundColor="?attr/colorErrorContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_size_md"
                        android:layout_height="@dimen/icon_size_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:src="@drawable/ic_logout"
                        app:tint="?attr/colorError"
                        android:contentDescription="로그아웃" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="로그아웃"
                        android:textAppearance="@style/TextAppearance.App.BodyLarge"
                        android:textColor="?attr/colorError"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:src="@drawable/ic_next"
                        app:tint="?attr/colorError"
                        android:contentDescription="로그아웃" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>