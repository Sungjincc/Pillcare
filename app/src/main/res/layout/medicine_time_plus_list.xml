<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_xs"
    app:cardCornerRadius="@dimen/corner_radius_md"
    app:cardElevation="@dimen/elevation_level1"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- 시간 아이콘 -->
        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="@dimen/icon_size_md"
            android:layout_height="@dimen/icon_size_md"
            android:src="@drawable/ic_alarm"
            app:tint="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="시간 아이콘" />

        <!-- 시간 정보 컨테이너 -->
        <LinearLayout
            android:id="@+id/timeInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/timeIcon"
            app:layout_constraintEnd_toStartOf="@id/timeActionContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 시간 표시 -->
            <TextView
                android:id="@+id/medicineTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.TitleMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="bold"
                tools:text="오전 08:00" />

            <!-- 요일 표시 -->
            <TextView
                android:id="@+id/medicineDayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textAppearance="@style/TextAppearance.App.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="월, 화, 수, 목, 금" />

        </LinearLayout>

        <!-- 액션 버튼 컨테이너 -->
        <LinearLayout
            android:id="@+id/timeActionContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 수정 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editTimeButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/touch_target_min"
                android:layout_height="@dimen/touch_target_min"
                app:icon="@drawable/ic_edit"
                app:iconSize="@dimen/icon_size_sm"
                app:iconTint="?attr/colorOnSurfaceVariant"
                android:contentDescription="시간 수정" />

            <!-- 삭제 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteTimeButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/touch_target_min"
                android:layout_height="@dimen/touch_target_min"
                app:icon="@drawable/ic_delete"
                app:iconSize="@dimen/icon_size_sm"
                app:iconTint="?attr/colorError"
                android:contentDescription="시간 삭제" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>