<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/recyclerViewSetMedicineTimeEfab"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="5dp"
        app:icon="@drawable/ic_alarm"
        app:iconGravity="textStart"
        app:iconSize="23dp"
        android:gravity="center"
        android:backgroundTint="@color/mainColor"
        android:text="12:00"
        android:textSize="15dp"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/recyclerViewMedicineTimeDeleteEfab"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/mainColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewSetMedicineTimeEfab"
        app:layout_constraintEnd_toEndOf="@id/recyclerViewdayContainer"
        android:visibility="visible"
        android:text="@string/stringDelete"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:paddingEnd="12dp"
        android:gravity="center"
        android:contentDescription="@string/stringMedicineTimeDeleteEfab"/>

    <LinearLayout
        android:id="@+id/recyclerViewdayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="7dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewSetMedicineTimeEfab"
        />


</androidx.constraintlayout.widget.ConstraintLayout>