<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.App.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="@dimen/corner_radius_lg"
    app:cardElevation="@dimen/elevation_level2"
    app:cardBackgroundColor="?attr/colorSurface"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding">

        <!-- 약물 색상 인디케이터 (왼쪽 컬러 바) -->
        <View
            android:id="@+id/medicineColorIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/pill_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 약물 아이콘 컨테이너 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/medicineIconContainer"
            android:layout_width="@dimen/pill_case_size_large"
            android:layout_height="@dimen/pill_case_size_large"
            android:layout_marginStart="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/elevation_level1"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/medicineColorIndicator"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/medicineImage"
                android:layout_width="@dimen/spacing_xl"
                android:layout_height="@dimen/spacing_xl"
                android:layout_gravity="center"
                android:src="@drawable/bg_pill_red"
                android:scaleType="centerInside"
                android:contentDescription="약물 아이콘" />

        </com.google.android.material.card.MaterialCardView>

        <!-- 약물 정보 컨테이너 -->
        <LinearLayout
            android:id="@+id/medicineInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/medicineIconContainer"
            app:layout_constraintEnd_toStartOf="@id/medicineActionContainer"
            app:layout_constraintTop_toTopOf="@id/medicineIconContainer"
            app:layout_constraintBottom_toBottomOf="@id/medicineIconContainer">

            <!-- 약물 이름 입력 필드 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/medicineNameInputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="약물 이름을 입력해주세요"
                app:boxCornerRadiusBottomEnd="@dimen/corner_radius_sm"
                app:boxCornerRadiusBottomStart="@dimen/corner_radius_sm"
                app:boxCornerRadiusTopEnd="@dimen/corner_radius_sm"
                app:boxCornerRadiusTopStart="@dimen/corner_radius_sm"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/medicineNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.BodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="1"
                    android:imeOptions="actionNext" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 약물 이름 표시 텍스트 -->
            <TextView
                android:id="@+id/medicineNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textAppearance="@style/TextAppearance.App.TitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                tools:text="아스피린 100mg"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- 액션 버튼 컨테이너 -->
        <LinearLayout
            android:id="@+id/medicineActionContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/medicineIconContainer"
            app:layout_constraintBottom_toBottomOf="@id/medicineIconContainer">

            <!-- 더보기 메뉴 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/medicineMenuButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/touch_target_min"
                android:layout_height="@dimen/touch_target_min"
                app:icon="@drawable/ic_more_vert"
                app:iconSize="@dimen/icon_size_md"
                app:iconTint="?attr/colorOnSurfaceVariant"
                android:contentDescription="약물 설정 메뉴" />

        </LinearLayout>

        <!-- 복용 시간 설정 영역 -->
        <LinearLayout
            android:id="@+id/medicineTimeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/medicineIconContainer"
            app:layout_constraintStart_toStartOf="@id/medicineColorIndicator"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 시간 설정 헤더 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lg"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/icon_size_sm"
                    android:layout_height="@dimen/icon_size_sm"
                    android:src="@drawable/ic_alarm"
                    app:tint="?attr/colorPrimary"
                    android:contentDescription="알람 아이콘" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="복용 시간"
                    android:textAppearance="@style/TextAppearance.App.BodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <!-- 시간 추가 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/setMedicineTimeEfab"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간 설정"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_alarm"
                    app:iconSize="16dp"
                    app:cornerRadius="@dimen/corner_radius_sm"
                    android:minHeight="36dp"
                    android:contentDescription="복용 시간 설정" />

            </LinearLayout>

            <!-- 설정된 시간 목록 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/medicineTimeRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:layout_marginStart="@dimen/spacing_lg"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="2"
                tools:listitem="@layout/medicine_time_plus_list" />

        </LinearLayout>

        <!-- 액션 버튼 영역 -->
        <LinearLayout
            android:id="@+id/medicineBottomActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginStart="@dimen/spacing_lg"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/medicineTimeContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 수정 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editMedicineButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:text="수정"
                android:textSize="14sp"
                app:icon="@drawable/ic_edit"
                app:iconSize="18dp"
                app:cornerRadius="@dimen/corner_radius_sm"
                android:visibility="gone"
                android:contentDescription="약물 정보 수정" />

            <!-- 저장 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveMedicineButton"
                style="@style/Widget.App.Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="저장"
                android:textSize="14sp"
                app:icon="@drawable/ic_save"
                app:iconSize="18dp"
                app:cornerRadius="@dimen/corner_radius_sm"
                android:contentDescription="약물 정보 저장" />

            <!-- 삭제 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteMedicineButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="삭제"
                android:textSize="14sp"
                app:icon="@drawable/ic_delete"
                app:iconSize="18dp"
                app:cornerRadius="@dimen/corner_radius_sm"
                app:strokeColor="?attr/colorError"
                android:textColor="?attr/colorError"
                app:iconTint="?attr/colorError"
                android:visibility="gone"
                android:contentDescription="약물 정보 삭제" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>