<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--약 이미지-->
    <ImageView
        android:id="@+id/medicineImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/bg_pill"
        android:scaleType="centerCrop"
        android:padding="50dp"/>

    <!--약 이름 입력-->
    <EditText
        android:id="@+id/medicineNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/medicineImage"
        app:layout_constraintBottom_toBottomOf="@id/medicineImage"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:hint="약 이름을 입력해주세요."
        android:textSize="15sp"/>

    <!--약 이름 표시-->
    <TextView
        android:id="@+id/medicineNameText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/medicineImage"
        app:layout_constraintBottom_toBottomOf="@id/medicineImage"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"/>


    <!--약 시간 설정 버튼-->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/setMedicineTimeEfab"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/medicineImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="25dp"
        app:icon="@drawable/ic_alarm"
        app:iconGravity="textStart"
        app:iconSize="23dp"
        android:gravity="center"
        android:backgroundTint="@color/mainColor"
        android:text="12:00"
        android:textSize="15dp"/>

    <!--약 시간 추가 버튼-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/medicineTimePlusFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:padding="70dp"
        android:backgroundTint="@color/mainColor"
        app:layout_constraintBottom_toBottomOf="@id/setMedicineTimeEfab"
        app:layout_constraintStart_toEndOf="@id/setMedicineTimeEfab"
        app:fabCustomSize="35dp"
        android:contentDescription="@string/medicineTimePlusButton"/>

    <!--약 정보 삭제 버튼-->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/medicineDeleteEfab"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/mainColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/medicineImage"
        app:layout_constraintEnd_toEndOf="@id/dayContainer"
        android:visibility="gone"
        android:text="@string/stringDelete"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:contentDescription="@string/stringMedicineDeleteEfab"/>
    <!--약 정보 수정 버튼-->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/medicineModifyEfab"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/mainColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/medicineImage"
        app:layout_constraintEnd_toStartOf="@id/medicineDeleteEfab"
        android:visibility="gone"
        android:text="@string/stringModify"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:contentDescription="@string/stringMedicineModifyEfab"/>


    <!--요일 버튼-->
    <LinearLayout
        android:id="@+id/dayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="27dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/setMedicineTimeEfab"
        tools:layout_editor_absoluteX="17dp" />

    <!--시간 추가 리사이클러 뷰-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicineTimePlusRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/setMedicineTimeEfab"
        app:layout_constraintTop_toBottomOf="@id/dayContainer"/>

    <!--완료 버튼-->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/medicinePlusSuccessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:elevation="8dp"
        android:backgroundTint="@color/mainColor"
        app:layout_constraintTop_toBottomOf="@id/medicineTimePlusRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/stringSuccess"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:contentDescription="@string/stringSuccess"/>

    <!--라인-->
    <ImageView
        android:id="@+id/lineImage"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dotted_line_horizontal"
        app:layout_constraintTop_toBottomOf="@id/medicinePlusSuccessButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>