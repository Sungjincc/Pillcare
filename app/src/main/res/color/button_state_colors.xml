<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true" android:color="?attr/colorPrimaryContainer" />
    
    <!-- Focused state -->
    <item android:state_focused="true" android:color="?attr/colorPrimaryContainer" />
    
    <!-- Hovered state -->
    <item android:state_hovered="true" android:color="?attr/colorPrimaryContainer" />
    
    <!-- Disabled state -->
    <item android:state_enabled="false" android:color="?attr/colorSurfaceVariant" />
    
    <!-- Default state -->
    <item android:color="?attr/colorSurface" />
    
</selector> 